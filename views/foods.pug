extends layout
block content
    h1.text-7xl.text-center.script.mb-5 #{category} Foods
    h1.text-2xl.text-center.mb-5 Food Count: #{foods.count} Foods
    div(class="flex flex-wrap -m-4")
        each food in foods.recipes
            div.transform.duration-500.transition-all(class="xl:w-1/3 w-full md:w-1/2 p-4 cursor-pointer shadow-lg hover:shadow-2xl hover:scale-105", data-aos="fade-up", data-aos-duration="500", data-aos-easing="linear")
                div(class="bg-gray-100 rounded-lg")
                    img(class="h-40 rounded w-full object-cover object-center mb-3", src=food.image_url, alt="content")
                    h3(class="tracking-widest text-green-500 text-xs font-medium title-font").
                        
                        Category: #{category}
                        
                    h2(class="text-lg text-gray-900 font-medium title-font mb-4").
                        
                        #{food.title}
                        
                    p(class="leading-relaxed text-base px-1").
                        
                        Publisher: #{food.publisher}
                        
                    p(class="leading-relaxed text-base px-1").
                        
                        Social-rank: #{food.social_rank}
                        